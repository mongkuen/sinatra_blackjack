<div class='placeholder'></div>
<h1>Hell<span class="highlight">o</span>, <%= session[:player_name] %>.</h1>
<hr>

<% if session[:game_over] %>

  <h4>Out of cash. Addicted?</h4>
  </br>
  <a href='/borrow' class='btn btn-danger'>Borrow $100</a>
  <a href='/bye' class='btn btn-warning'>Leave</a>

<% else %>

  <h4>Player has <span class="highlight">$<%= session[:player_pot] %></span>.</h4>
  </br>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form action='/game' method='post'>
        <input type='text' name='player_bet' class="form-control" placeholder="Bet amount">
        </br>
        <input id='play_hand' type='submit' class='btn btn-danger center-block' value='Play'>
      </form>
    </div>
  </div>

<% end %>
